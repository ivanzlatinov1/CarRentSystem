@model IEnumerable<CarRentSystem.Services.Models.CarModel>

@{
    ViewData["Title"] = "Rental Cars";
    bool isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="Index" method="get">
    <div class="container text-center mt-4">
        <div class="d-flex col-5 align-content-around flex-nowrap mx-auto">
            <input class="form-control col-8 mx-2" type="text" name="search" placeholder="Search a car by its make or model" value="@ViewData["Search"]" />
            <input class="btn btn-primary col-2" type="submit" value="Search" />
        </div>
    </div>
</form>

<div class="container mt-4">
    @if (isAuthenticated)
    {
        <div class="text-center mb-3">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    }
    <table class="table table-striped table-bordered text-center">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Make)</th>
                <th>@Html.DisplayNameFor(model => model.Model)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
                @if (isAuthenticated)
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Make)</td>
                    <td>@Html.DisplayFor(modelItem => item.Model)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        <img src="~/images/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@item.Make @item.Model" width="200" />
                    </td>
                    @if (isAuthenticated)
                    {
                        <td>
                            <div class="d-flex flex-column">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mb-2">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info mb-2">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
