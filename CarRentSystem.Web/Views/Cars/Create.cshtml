@model CarRentSystem.Services.Models.CarModel

@{
    ViewData["Title"] = "Add New Car";
}

<h1 class="text-center" style="font-family: 'Playfair Display', serif; font-size: 2.5rem; color: #ffd700; margin-bottom: 10px; margin-top: 40px;">@ViewData["Title"]</h1>

<div class="row d-flex justify-content-center align-items-center" style="background: linear-gradient(to right, #0d1b2a, #4a3f35); border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); color: #fff;">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 form-floating mb-3">
                    <input asp-for="Make" class="form-control" placeholder="Make" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Make" class="form-label" style="color: #ffd700; margin-left: 15px;">Make</label>
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating mb-3">
                    <input asp-for="Model" class="form-control" placeholder="Model" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Model" class="form-label" style="color: #ffd700; margin-left: 15px;">Model</label>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-floating mb-3">
                    <input asp-for="Year" class="form-control" placeholder="Year" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Year" class="form-label" style="color: #ffd700; margin-left: 15px;">Year</label>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating mb-3">
                    <input asp-for="Seats" class="form-control" placeholder="Seats" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Seats" class="form-label" style="color: #ffd700; margin-left: 15px;">Seats</label>
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>
            </div>


            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" placeholder="Description" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                <label asp-for="Description" class="form-label" style="color: #ffd700;">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Price" class="form-control" placeholder="Price" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                <label asp-for="Price" class="form-label" style="color: #ffd700;">Price</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="ImageUrl" type="hidden" value="-" />
            </div>

            <div class="form-group mb-3 text-center">
                <label asp-for="Image" style="color: #ffd700; font-size: 1.2rem; font-family: 'Roboto', sans-serif;">Upload Image:</label>
                <div style="border: 2px dashed #ffd700; padding: 20px; border-radius: 10px; background: rgba(255, 255, 255, 0.1);">
                    <input asp-for="Image" type="file" class="form-control-file" style="color: #fff;" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-lg" style="background: #ffd700; color: #0d1b2a; border: none; font-family: 'Roboto', sans-serif; width: 50%;" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" style="color: #ffd700; text-decoration: none;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
