@model IEnumerable<CarRentSystem.Services.Models.RentModel>
@{
    ViewData["Title"] = "Rents";
}

<h2>Rents</h2>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Car ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rent in Model)
        {
            <tr>
                <td>@rent.UserId</td>
                <td>@rent.CarId</td>
                <td>@rent.RentDate</td>
                <td>@rent.ReturnDate</td>
                <td>
                    <a asp-action="Details" asp-route-userId="@rent.UserId" asp-route-carId="@rent.CarId">Details</a> |
                    <a asp-action="Edit" asp-route-userId="@rent.UserId" asp-route-carId="@rent.CarId">Edit</a> |
                    <a asp-action="Delete" asp-route-userId="@rent.UserId" asp-route-carId="@rent.CarId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Rent">Rent a Car</a> |
<a asp-action="Return">Return a Car</a>
