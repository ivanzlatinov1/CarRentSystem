@{
    ViewData["Title"] = "Rent a Car";
    var users = ViewBag.Users as List<SelectListItem>;
    var cars = ViewBag.Cars as List<SelectListItem>;
}

<h2 class="text-center" style="font-family: 'Playfair Display', serif; font-size: 2.5rem; color: #ffd700; margin-bottom: 20px; margin-top: 40px">Rent a Car</h2>

<div class="d-flex justify-content-center align-items-center"
     style="background: linear-gradient(to right, #0d1b2a, #4a3f35); border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); color: #fff; width: 50%; margin: 0 auto;">
    <form asp-action="Rent" method="post" style="width: 100%;">
        <div class="form-group mb-3">
            <label for="userId" style="font-family: 'Roboto', sans-serif; color: #ffd700; margin-bottom: 5px;">User</label>
            <select id="userId" name="userId" class="form-control" asp-items="users"
                    style="background: rgba(0, 0, 0, 0.8); color: #fff; border: none; border-bottom: 2px solid #ffd700; padding-left: 10px;">
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="carId" style="font-family: 'Roboto', sans-serif; color: #ffd700; margin-bottom: 5px;">Car</label>
            <select id="carId" name="carId" class="form-control" asp-items="cars"
                    style="background: rgba(0, 0, 0, 0.8); color: #fff; border: none; border-bottom: 2px solid #ffd700; padding-left: 10px;">
            </select>
        </div>
        <button type="submit" class="btn btn-lg"
                style="background: #ffd700; color: #0d1b2a; border: none; font-family: 'Roboto', sans-serif; width: 100%; margin-top: 20px;">
            Rent
        </button>
    </form>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger text-center mt-4" style="font-family: 'Roboto', sans-serif; color: #fff; background: rgba(255, 0, 0, 0.2); border-radius: 10px; padding: 5px;">
        @foreach (var error in ViewData.ModelState[""].Errors)
        {
            <p class="mt-3">@error.ErrorMessage</p>
        }
    </div>
}

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-lg"
       style="background: #ffd700; color: #0d1b2a; border: none; font-family: 'Roboto', sans-serif;">Back to List</a>
</div>