@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center" style="font-family: 'Playfair Display', serif; font-size: 2.5rem; color: #ffd700; margin-bottom: 20px; margin-top: 50px;">@ViewData["Title"]</h1>

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <section class="p-5 rounded shadow" style="background: rgba(255, 255, 255, 0.1); color: #fff; border: 1px solid rgba(255, 255, 255, 0.2);">
            <form id="account" method="post">
                <h2 class="text-center" style="font-family: 'Roboto', sans-serif; font-size: 1.5rem; color: #ffd700;">Use a local account to log in</h2>
                <hr style="border-color: #ffd700;" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Input.Email" class="form-label" style="color: #ffd700;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Input.Password" class="form-label" style="color: #ffd700;">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label" style="color: #ffd700;">
                        <input class="form-check-input" asp-for="Input.RememberMe" style="border: 2px solid #ffd700;" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg" style="background: #ffd700; color: #0d1b2a; border: none; font-family: 'Roboto', sans-serif;">Log in</button>
                </div>
                <div class="mt-3 text-center">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #ffd700; text-decoration: none; transition: color 0.3s ease;">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}