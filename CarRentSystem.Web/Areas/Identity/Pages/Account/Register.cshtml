@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="col-md-6">
        <section class="p-5 rounded shadow d-flex flex-column pt-3" style="background: rgba(255, 255, 255, 0.1); color: #fff; border: 1px solid rgba(255, 255, 255, 0.2);">
            <h1 class="text-center" style="font-family: 'Playfair Display', serif; font-size: 2.5rem; color: #ffd700;">@ViewData["Title"]</h1>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center" style="font-family: 'Roboto', sans-serif; font-size: 1.5rem; color: #ffd700;">Create a new account</h2>
                <hr style="border-color: #ffd700;" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-row d-flex justify-content-between mb-3">
                    <div class="form-floating col-md-5">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="John" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                        <label asp-for="Input.FirstName" class="form-label" style="color: #ffd700;">First Name</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-floating col-md-5">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="Doe" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                        <label asp-for="Input.LastName" class="form-label" style="color: #ffd700;">Last Name</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Input.Email" class="form-label" style="color: #ffd700;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Input.Password" class="form-label" style="color: #ffd700;">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Input.ConfirmPassword" class="form-label" style="color: #ffd700;">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ImageUrl" class="form-control" autocomplete="username" aria-required="true" placeholder="your profile image's url" style="background: rgba(255, 255, 255, 0.2); color: #fff; border: none; border-bottom: 2px solid #ffd700;" />
                    <label asp-for="Input.ImageUrl" class="form-label" style="color: #ffd700;">Image URL</label>
                    <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg" style="background: #ffd700; color: #0d1b2a; border: none; font-family: 'Roboto', sans-serif;">Register</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
